<%- include('../../../templates/admin-navbar.ejs') -%>

<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
   <!-- Content Header (Page header) -->
   <section class="content-header">
     <h1>
       <small>&nbsp;</small>
     </h1>
     <ol class="breadcrumb">
       <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
       <li><a href="#">Transactions</a></li>
       <li><a href="#">Consignor Sales</a></li>
       <li class="active">Payment Breakdown</li>
     </ol>
   </section>

   <!-- Main content -->
   <section class="content">
     <div class="row">
       <div class="col-xs-12">
         <div class="box">
           <div class="box-header">
             <h2 align="center"><strong>Payment Receipt</strong></h4>

           </div>
           <br>
           <br>
           <div class="row">
             <div class="col-sm-1">
             </div>
             <div class="col-sm-4">
               <h4><strong>Issued To:</strong></h4>
               <h5><%=consignor[0].strBusinessName%></h5>
               <h5><%=consignor[0].strBusinessAddress%></h5>
               <h5><%=consignor[0].strBusinessEmail%></h5>
               <h5><%=consignor[0].strSupplierMobile%></h5>
             </div>
             <div class="col-sm-4">
               <h4><strong>Issued By:</strong></h4>
               <h5>Gustle Agulto - Operations Manager</h5>
               <h5>Ultra Super Green Trading Corp.</h5>
               <h5>Katipunan Ave., Quezon City</h5>
               <h5>info.ultrasupergreen@gmail.com</h5>
             </div>
             <div class="col-sm-3">
               <h4><strong>Payment Receipt No: </strong><%= re[0].intConsignorPaymentNo%></h4>
               <h4><strong>Payment Receipt Date: </strong><%= moment(re[0].paymentDate).format("MM/DD/YYYY")%></h4>
               <br>
               <h4><strong>Payment Total: </strong><%= (total[0].total_all).toFixed(2)%></h4>

             </div>
           </div>


           <hr>
           <!-- /.box-header -->
           <div class="box-body table-responsive">
             <table id="example2" class="table table-bordered table-hover ">
               <thead class="bg-success">
                <tr>
                  <th>No</th>
                  <th>Description</th>
                  <th>Amount</th>
                </tr>
               </thead>
               <tbody>
                 <% if (re == null || re == undefined){ %>
                 <% }else if (re.length == 0){ %>
                 <% }else{ %>
                   <% var count = 1; %>
                   <% re.forEach(function(i){ %>
                     <tr>
                       <td><%=count%></td>
                       <td><%=i.strDescription%></td>
                       <td>Php <%=(i.amount).toFixed(2)%></td>
                     </tr>
                     <% count++; %>
                   <% }) %>
                 <% } %>

               </tbody>

             </table>
            <a href="/consSales/detailsPrint?payment=<%=re[0].intConsignorPaymentNo%>" target="_blank" class="large ui button pull-right"> <i class="fa fa-print"></i> Print</a>
            <a href="" class="large ui teal button pull-right"><i class="fa fa-envelope"></i> Send to Email</a>
           </div>
           <!-- /.box-body -->
         </div>
         <!-- /.box -->

     </div>
       <!-- /.col -->
     </div>
     <!-- /.row -->
   </section>
   <!-- /.content -->
</div>

 <!-- /.content-wrapper -->

 <!-- Modals -->


 <%- include('../../../templates/admin-aside.ejs') -%>

<!-- ./wrapper -->

<%- include('../../../templates/admin-footer.ejs') -%>

