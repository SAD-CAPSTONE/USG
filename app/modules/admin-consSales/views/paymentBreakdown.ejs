<div class="box-body table-responsive">
  <table id="breakdown_table" class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>No</th>
        <th>Description</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% if (re==null||re==undefined){ %>

      <% }else if(re.length==0){ %>

      <% }else{ %>
      <% var count = 1; %>
      <%  re.forEach(function(i){ %>
          <tr>
            <td><%=count%></td>
            <td><%=i.strDescription%></td>
            <td>₱ <%=(i.amount).toFixed(2)%></td>
          </tr>
      <% count++; %>
      <%  }) %>
      <% } %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-sm-6">
  </div>
  <div class="col-sm-6">
    <h4>Total: ₱ <%=(total).toFixed(2)%></h4>
  </div>
</div>

<script>
  $(function () {
    $('#breakdown_table').DataTable({
      'paging'      : false,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : false,
      'info'        : false,
      'autoWidth'   : true,
	  'select'		: true,
	  'scroll'		: true
    })
  })
</script>
