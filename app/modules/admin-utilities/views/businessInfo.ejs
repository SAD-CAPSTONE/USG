<script>
$(document).ready(function(){
  $('#save').on('click',function(){
    $.ajax({
      url: '/utilities/updateBusinessInfo',
      method: 'post',
      datatype: "json",
      data: {
        name: $('#name').val(),
        address: $('#address').val(),
        phone: $('#phone').val(),
        mobile: $('#mobile').val(),
        email: $('#email').val()
      },
      success: function(response,status,http){
        if (response == "yes"){
          swal("Success!", "You edited the business information", "success");
          window.location.reload();
        }
      }
    })
  })
});
</script>

