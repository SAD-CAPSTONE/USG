<%- include('../../../templates/admin-navbar.ejs') -%>

<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
   <!-- Content Header (Page header) -->
   <section class="content-header">
     <h1>
       <small>&nbsp;</small>
     </h1>
     <ol class="breadcrumb">
       <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
       <li><a href="#">Orders</a></li>
       <li class="active">Receive Delivery</li>
     </ol>
   </section>

   <!-- Main content -->
   <section class="content">
     <div class="row">
       <div class="col-xs-12">
         <div class="box">
           <div class="box-header">
             <h2 align="center"><strong>Delivery Transmittal Receipt</strong></h2>

           </div>
           <br>
           <br>
           <div class="row">
             <div class="col-sm-1">
             </div>
             <div class="col-sm-4">
               <h4><strong>Shipped From:</strong></h4>
               <h5><%=from[0].strBusinessName%></h5>
               <h5><%=from[0].strBusinessAddress%></h5>
               <h5><%=from[0].strBusinessEmail%></h5>
               <h5><%=from[0].strSupplierMobile%></h5>
             </div>
             <div class="col-sm-4">
               <h4><strong>Delivered To:</strong></h4>
               <h5>Gustle Agulto - Operations Manager</h5>
               <h5>Ultra Super Green Trading Corp.</h5>
               <h5>Katipunan Ave., Quezon City</h5>
               <h5>info.ultrasupergreen@gmail.com</h5>
             </div>
             <div class="col-sm-3">
                <h4><strong>Delivery Receipt No: </strong><%=delivery_no%></h4>
             </div>
           </div>


           <hr>
           <!-- /.box-header -->
           &nbsp;&nbsp;&nbsp;<strong><small>Legend: </small></strong><a class=" ui green empty circular label"></a> <small>Added to inventory</small>
           <a class="ui red empty circular label"></a> <small>Not added to inventory</small>
           <a class="ui orange empty circular label"></a> <small>No existing inventory record</small>

           <div class="box-body table-responsive">
             <table id="example2" class="table table-bordered table-hover ">
               <thead class="bg-success">
                <tr>
                  <th></th>
                  <th>Product Name</th>
                  <th>Size</th>
                  <th>Variant</th>
                  <th>Quantity</th>
                  <th>Status</th>
                  <th>Expiration Date</th>
                </tr>
               </thead>
               <tbody>
                 <% if (re == null || re == undefined){ %>

                 <% }else if (re.length == 0){ %>

                 <% }else{ %>
                   <% re.forEach(function(i){ %>
                     <tr>

                       <td>
                         <% if(i.inventoryRecordStatus == 0){ %>
                           <a class=" ui red empty circular label"></a>
                         <% }else{ %>
                           <a class=" ui green empty circular label"></a>
                         <% } %>

                         <% if (i.intInventoryNo == null){ %>
                            <a class="ui orange empty circular label"></a>
                         <% } %>
                       </td>
                       <td><%=i.strProduct%></td>
                       <td><%=i.strSize%></td>
                       <td><%=i.strVariant%></td>
                       <td><%=i.intQuantity%></td>
                       <td>
                          <%if (i.intOrderStatus == 'Good'){ %>
                            <span class="label label-success">Good</span>
                          <% } else{ %>
                            <span class="label label-danger">Bad</span>
                          <% } %>
                        </td>
                       <td><%= moment(i.dateExpiration).format("MM/DD/YYYY") %></td>

                     </tr>
                   <% }) %>
                 <% } %>

               </tbody>

             </table>
             <br>
            <a href="/receiveDelivery/print?ro=<%=delivery_no%>" target="_blank" class="large ui button pull-right"> <i class="fa fa-print"></i> Print</a>
            <a href="/receiveDelivery/returnBadOrders?ro=<%=delivery_no%>" class="large ui teal button pull-right">Return Bad Orders</a>
            <a href="/receiveDelivery/inventoryRecord?ro=<%=delivery_no%>" class="large ui blue button pull-right">Add Products to Inventory</a>
           </div>
           <!-- /.box-body -->
         </div>
         <!-- /.box -->

     </div>
       <!-- /.col -->
     </div>
     <!-- /.row -->
   </section>
   <!-- /.content -->
</div>

 <!-- /.content-wrapper -->

