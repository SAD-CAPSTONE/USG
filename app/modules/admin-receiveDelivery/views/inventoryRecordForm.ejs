<script>
  $('#inventoryRecord_form').submit(function(e){
    e.preventDefault();

    $.post('/receiveDelivery/addToInventory', $('#inventoryRecord_form').serialize(), function(data,status){
      if(data=="yes"){
        swal({title: "Success!", text: "You have added deliveries to inventory!", type: "success"}).then(()=>{

        })
      }else{
        swal({title: "Error!",  type: "error"}).then(()=>{

        })
      }
    })
  })

</script>
