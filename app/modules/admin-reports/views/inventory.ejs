<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Inventory Report
      <small></small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"></i> Home</a></li>
      <li><a href="#"></i> Reports</a></li>
      <li class="active">Inventory</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- Stock Monthly Report -->
    <div class="row">

      <div class="col-sm-12">
        <div class="box">
          <div class="box-header with-border">
            <h3 class="box-title">Stock Monthly Report</h3>
          </div>

          <div class="box-body">
            <div class="row">
              <div class="col-md-12">
                <p class="text-center">
                  <strong>1 Jan, 2018 - 31 Dec, 2018</strong>
                </p>

                <canvas id="recapChart" width="400" height="100"></canvas>
              </div>
            </div>
          </div>

        </div>
      </div>



    </div>
    <!-- /.row -->

    <!-- Inventory Transactions -->
    <div class="row">
      <div class="col-sm-12">
        <div class="box">
          <div class="box-header with-border">
            <h3 class="box-title">Inventory Transactions</h3>
          </div>

          <div class="box-body">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <label>Select date range:</label>

                  <div class="input-group">
                    <div class="input-group-addon">
                      <i class="fa fa-calendar"></i>
                    </div>
                    <input type="text" class="form-control" id="range">

                  </div>
                </div>
                <div class="table-responsive">

                  <table id="transactions" class="table no-margin">
                    <thead>
                      <tr>
                        <th>Date</th>
                        <th>Product Name</th>
                        <th>Transaction</th>

                      </tr>
                    </thead>

                    <tbody>

                    </tbody>
                  </table>
                </div>

              </div>
            </div>
          </div>
          <div class="box-footer clearfix">

            <a href="javascript:void(0)" class="large ui teal button pull-right">View All</a>
          </div>
      </div>
    </div>

    <div class="row">

      <!-- Not moving products -->
      <div class="col-sm-12">
        <div class="col-sm-6">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Not moving products</h3>
            </div>

            <div class="box-body">
              <div class="row">

                  <div class="table-responsive">
                    <table class="table no-margin">
                      <thead>
                        <tr>

                          <th>Product Name</th>
                          <th>Remaining Stock</th>
                          <th></th>
                        </tr>
                      </thead>

                      <tbody>

                      </tbody>
                    </table>
                  </div>


              </div>
            </div>
            <div class="box-footer clearfix">

              <a href="javascript:void(0)" class="large ui teal button pull-right">View All</a>
            </div>
          </div>


        </div>
      </div>
    </div>



    <div class="row">

      <!-- Best Seller Products -->
      <div class="col-sm-8">
        <div class="box">
          <div class="box-header with-border">
            <h3 class="box-title">Recent Inventory Transactions</h3>
          </div>

          <div class="box-body">
            <div class="row">
              <div class="col-md-12">
                <div class="table-responsive">
                  <table class="table no-margin">
                    <thead>
                      <tr>
                        <th>SKU</th>
                        <th>Product Name</th>
                        <th style="width: 20%">Date</th>
                        <th>View</th>
                      </tr>
                    </thead>

                    <tbody>
                      <tr>
                        <td>1000</td>
                        <td>Gatas Kalabaw Choco 1000ml</td>
                        <td>10</td>
                        <td>Php 2,000.00</td>
                      </tr>
                      <tr>
                        <td>1000</td>
                        <td>Gatas Kalabaw Choco 1000ml</td>
                        <td>10</td>
                        <td>Php 2,000.00</td>
                      </tr>
                      <tr>
                        <td>1000</td>
                        <td>Gatas Kalabaw Choco 1000ml</td>
                        <td>10</td>
                        <td>Php 2,000.00</td>
                      </tr>

                    </tbody>
                  </table>
                </div>

              </div>
            </div>
          </div>
          <div class="box-footer clearfix">

            <a href="javascript:void(0)" class="large ui teal button pull-right">View All</a>
          </div>

        </div>

      </div>

      <!-- Payment Methods -->
      <div class="col-sm-4">
        <div class="box">
          <div class="box-header with-border">
            <h3 class="box-title">Product Category</h3>
          </div>

          <div class="box-body">
            <div class="row">
              <div class="col-md-12">
                <canvas id="donutChart" width="400" height="250"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->



