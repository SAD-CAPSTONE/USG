<%- include('../../../templates/admin-navbar.ejs') -%>

<style>
  .special-position-1 {
    position: absolute;
    /* left: 180px; */
  }
  #example3_length {
    position: absolute;
    left: 75px;
  }
</style>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>

      <small></small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"></i> Home</a></li>
      <li><a href="#"></i> Reports</a></li>
      <li class="active">Sales</li>
    </ol>
  </section>

  <section class="content">
    <div class="row">
      <div class="col-sm-12">
        <div class="box">
          <div class="box-header with-border">
            <h3 class="box-title">Total Values of Products</h3>
          </div>

          <div class="box-body">

            <div class="row">
              <div class="col-sm-12">
                <div class="special-position-1">
                  <% if(totalValueProducts[0]){ %>
                    <a href="/reports/totalValueExport">
                      <button class="large ui button">Excel</button>
                    </a>
                  <% }else{ %>
                    <a>
                      <button class="large ui button" disabled>Excel</button>
                    </a>
                  <% } %>
                </div>

                <div class="table-responsive">
                  <table id="example3" class="table no-margin">
                    <thead>
                      <tr>
                        <th>Product Name</th>
                        <th>Stock Quantity</th>
                        <th style="width: 20%">Total Value</th>

                      </tr>
                    </thead>

                    <tbody>
                      <% totalValueProducts.forEach((data)=>{ %>
                        <tr>
                          <td><%= data.strBrand%> <%= data.strProductName%> <%= data.intSize%></td>
                          <td><%= data.stock%></td>
                          <td><%= data.totalValue%></td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>

              </div>
            </div>
          </div>
            <!-- <div class="box-footer clearfix">

              <a href="javascript:void(0)" class="large ui teal button pull-right">View All</a>
            </div> -->
        </div>
      </div>
    </div>

  </section>

  <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->



  <%- include('../../../templates/admin-aside.ejs') -%>

  <!-- ./wrapper -->

  <!-- REQUIRED JS SCRIPTS -->

  <%- include('../../../templates/admin-footer.ejs') -%>

  <script>
    $(function () {
      $('#example3').DataTable({
        'paging'      : true,
        'lengthChange': true,
        'searching'   : true,
        'ordering'    : true,
        'info'        : true,
        'autoWidth'   : true,
  	  'select'		: true,
  	  'scroll'		: true
      })
    })
  </script>

  <script>
    $('#title').html("USG | Sales Reports");
    $(".treeview a:contains('Reports')").parent().addClass("active");
    $(".navi a:contains('Sales')").parent().addClass("active");
  </script>

