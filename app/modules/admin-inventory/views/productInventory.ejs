                    <th>Inventory No</th>
                    <th>Supplier Name</th>
                    <th>Size</th>
                    <th>SRP</th>
                    <th>Product Price</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% if (re == null || re == undefined || re.length == 0) { %>

                  <% }else { %>
                    <% re.forEach(function(i){ %>
