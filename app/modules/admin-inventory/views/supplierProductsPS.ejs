<%- include('../../../templates/admin-navbar.ejs') -%>

 <!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>

        <small>Note: Please monitor stocks regularly, check if there is damaged products.</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Maintenance</a></li>
        <li class="active">Products per Supplier</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row"> 
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">All Products and Respective Suppliers</h3>
            </div>

            <div class="box-body table-responsive">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <td>Business Name</td>
                            <td>Products</td>
                            <td>Vairant</td>
                            <td>Size</td>
                            <td>Quantity</td>
                        </tr>
                    </thead>
                    <tbody>
                    <% if (re == null || re == undefined || re.length == 0){ %>
                    <% } else { %>
                    <%  re.forEach(function(i){ %>
                        <tr>
                            <td><%= i.strBusinessName%></td>
                            <td><%= i.strProductName%></td>
                            <td><%= i.strVariant%></td>
                            <td><%= i.intSize%></td>
                            <td><%= i.intQuantity%></td>
                        </tr>
                    <%  }) %>
                    <% } %>
                    </tbody>
                    </table>
        
        
                </div>
              </div>
            </div>
            
          </div>
            <!-- /.box-body -->

            <div class="box-footer">
              <a href="supplierProducts"><button type="submit" class="btn btn-default">Back</button></a>

            </div>
          </div>
          <!-- /.box -->

	    </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

  <!-- /.content-wrapper -->

  <!-- Modals -->

  <%- include('../../../templates/admin-aside.ejs') -%>

<!-- ./wrapper -->

<!-- REQUIRED JS SCRIPTS -->

<%- include('../../../templates/admin-footer.ejs') -%>

<!-- page script (new added) -->
<script>
  $(function () {
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': true,
      'searching'   : true,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : true,
	  'select'		: true,
	  'scroll'		: true
    })
  })
</script>


<script>
$('#title').html("USG | Supplier Products");

$(".treeview a:contains('Inventory')").parent().addClass("active");
$(".navi a:contains('Products per Supplier')").parent().addClass("active");
</script>


<!-- Optionally, you can add Slimscroll and FastClick plugins.
     Both of these plugins are recommended to enhance the
     user experience. -->
</body>
</html>