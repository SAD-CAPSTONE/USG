<%- include('../../../templates/admin-navbar.ejs') -%>

 <!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>

        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Inventory</a></li>
        <li class="active">Expired Products</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#allExpired" data-toggle="tab"><i class="fa fa-bars"></i> Expired Products</a></li>
              <li><a href="#searchExpired" data-toggle="tab"><i class="fa fa-plus"></i> Search Expired</a></li>
              <li><a href="#pulledOutProducts" data-toggle="tab"><i class="fa fa-plus"></i> Pulled Out Products</a></li>
            </ul>
            <div class="tab-content">

              <!-- All Expired -->
              <div class="tab-pane active" id="allExpired">
                <div class="box-body table-responsive">
                  <table id="example1" class="table table-bordered table-hover">
                    <thead>
                      <tr>
                        <th style="width: 30px"></th>
                        <th>No</th>
                        <th>Barcode</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Brand</th>
                        <th>Supplier</th>
                        <th>Expiration Date</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (all == null || all == undefined){ %>

                      <%}else if(all.length==0){ %>

                      <% }else{ %>
                        <% all.forEach(function(i){ %>
                          <tr>
                            <td></td>
                            <td><%=i.intBatchNo%></td>
                            <td><%=i.strBarcode%></td>
                            <td><%=i.strProductName%></td>
                            <td><%=i.intQuantity%></td>
                            <td><%=i.strBrand%></td>
                            <td></td>
                            <td><%=moment(i.expirationDate).format('MM/DD/YYYY')%></td>
                          </tr>
                        <% }) %>
                      <% } %>
                    </tbody>
                  </table>
                </div>

              </div>

              <!-- Search Expired -->
              <div class="tab-pane" id="searchExpired">
                </br>
                  <!-- Date range -->
                  <div class="row">
                    <div class="form-group col-sm-4">
                      <label>Select date range:</label>

                      <div class="input-group">
                        <div class="input-group-addon">
                          <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control" id="reservation">

                      </div>
                      <!-- /.input group -->
                    </div>
                    <!-- /.form group -->
                    <div class="col-xs-2">
                      </br>

                      <button id="search-expired" class="large ui green button"><i class="fa fa-search"></i>  Search</button>

                    </div>
                    <div class="col-xs-2">
                      </br>

                      <button id="pull-out" class="btn btn-danger"><i class="fa fa-close"></i> Pull-out all from inventory</button>
                    </div>
                  </div>

                </br>
                <!-- /.box-header -->
                <div id="tabl" class="box-body table-responsive">

                </div>

              </div>

              <!-- Pulled Out Stocks -->
              <div class="tab-pane" id="pulledOutProducts">
                <div class="box-body table-responsive">
                  <table id="example2" class="table table-bordered table-hover">
                    <thead>
                    <tr>
                      <th>Batch No</th>
                      <th>Product Name</th>
                      <th>Supplier</th>
                      <th>Quantity</th>
                      <th>Date Pulled-out</th>
                    </tr>
                    </thead>
                    <tbody>
                      <% if (re == null || re == undefined){ %>

                      <% }else if (re.length == 0){ %>

                      <% }else{ %>
                      <%  re.forEach(function(i){ %>
                          <tr>
                            <td><%=i.intBatchNo %></td>
                            <td><%=i.strBrand%> <%=i.strProductName%> <%=i.intSize%> <%=i.strUnitName%></td>
                            <td><%=i.strFname%> <%=i.strLname%></td>
                            <td><%=i.quantity%></td>
                            <td><%=moment(i.pullOutDate).format("MM/DD/YYYY")%></td>
                          </tr>
                        <% }) %>
                      <% } %>
                    </tbody>

                  </table>
                </div>
              </div>

            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
          </div>
	      </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

  <!-- /.content-wrapper -->

  <!-- Modals -->


<%- include('../../../templates/admin-aside.ejs') -%>

<!-- ./wrapper -->

