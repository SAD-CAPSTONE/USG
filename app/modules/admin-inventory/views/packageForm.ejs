<script>
  // DELETE OF PRODUCT IN PRODUCT LIST
  $('.deleteRow').on('click',function(){

    $(this).closest('tr').find('input').each(function(){
      $(this).removeAttr('name')

    })

    var currentPrice = $('#suggestedPrice').val() - $(this).closest('tr').find('input.price').val();
    $('#suggestedPrice').val(currentPrice);

    $(this).closest('tr').remove();

  });

  // SET TOTAL VALUE BASED ON THE LIST
  var totalValue = 0;
  $('table').find('input.quantity').each(function(){
    totalValue = parseInt(totalValue) +  ($(this).val() * parseInt($(this).closest('tr').find('input.price').val()));
  })
  $('#suggestedPrice').val(totalValue)

  // QUANTITY OF PRODUCT CHANGE IN LIST
  $('.quantity').on('keyup',function(){
    totalValue = 0;

    $('table').find('input.quantity').each(function(){
      totalValue = parseInt(totalValue) +  ($(this).val() * parseInt($(this).closest('tr').find('input.price').val()));
    })
    $('#suggestedPrice').val(totalValue)

  })

  // ADD NEW PRODUCT IN THE LIST


  $('.addProduct').on('click',function(){
    var neglectProducts = [];
    $('table').find('input.product').each(function(){
      neglectProducts.push($(this).val());
    }).promise().done(function(){
      if(neglectProducts.length == 0){ neglectProducts = ["NULL"]}
      $.post('/inventory/showProducts', {array: neglectProducts}, function(data,status){
        if(data){
          var t = $('#example5').DataTable();
          t.clear();
          t.draw();
          data.forEach(function(i){


            t.row.add( [
                `<input type="checkbox"  value="${i.intInventoryNo}" name="product">`,
                `<img = width="40px" height="40px" src="/assets/images/products/${i.strProductPicture}">`,
                `${i.strProductName} ${i.strVariant} ${i.intSize} ${i.strUnitName}`,
                `Php ${ (i.productPrice).toFixed(2) }`

            ] ).draw( false );


          })
          $('.addList').click();
        }

      })
    })

  })
</script>

