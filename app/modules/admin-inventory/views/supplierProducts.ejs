<%- include('../../../templates/admin-navbar.ejs') -%>

 <!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>

        <small>Note: Please monitor stocks regularly, check if there is damaged products.</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Maintenance</a></li>
        <li class="active">Products per Supplier</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row"> 
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">All Products and Respective Suppliers</h3>
            </div>

            <!-- /.box-header -->
            <div class="box-body table-responsive">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>No</th>
                  <th>Supplier Name</th>
                  <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                    <% if (re == null || re == undefined){ %>
                          
                    <% }else if (re.length == 0){ %>9

                    <% }else{ %>
                    <%  re.forEach(function(i){ %>
                <tr>
                  <td><%= i.intUserID%></td>
                  <td><%= i.strBusinessName%></td>
                  <td style="width:170px;">
                    <button type="button" data-toggle="modal" class="viewDetailsButton btn btn-default btn-sm">View Details</button>
                    </div>
                  </td>
                </tr>
                  <%  }) %>
                  <% } %>
                </tbody>

              </table>
            </div>
          </div>
        </div>
        
      </div>
            <!-- /.box-body -->

            <div class="box-footer">
              <a href="voucher.html"><button type="submit" class="btn btn-default">Back</button></a>

            </div>
          </div>
          <!-- /.box -->

	    </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

  <!-- /.content-wrapper -->

  <!-- Modals -->

  <%- include('../../../templates/admin-aside.ejs') -%>

<!-- ./wrapper -->

<!-- REQUIRED JS SCRIPTS -->

<%- include('../../../templates/admin-footer.ejs') -%>

<!-- page script (new added) -->
<script>
  $(function () {
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': true,
      'searching'   : true,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : true,
	  'select'		: true,
	  'scroll'		: true
    })
  })
</script>


<script>
$('#title').html("USG | Supplier Products");

$(".treeview a:contains('Inventory')").parent().addClass("active");
$(".navi a:contains('Products per Supplier')").parent().addClass("active");
</script>


