 <!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>

        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Transactions</a></li>
        <li class="active">All Returns</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-sm-12">
          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#allReturns" data-toggle="tab"> All Returns</a></li>
              <li><a href="#badDeliveries" data-toggle="tab"> Bad Deliveries</a></li>


            </ul>
            <div class="tab-content">
              <!-- All Returns -->
              <div class="tab-pane active" id="allReturns">

                <!-- buttons -->
                  &nbsp; &nbsp;<a href="/returnProducts/form" target="_blank"><button type="button" class="large ui green button"> Return Products to Supplier</button></a>


                <div class="box-body table-responsive">
                  <table id="example1" class="table table-bordered table-hover">
                    <thead>
                    <tr>
                      <th>No</th>
                      <th>Business Name</th>
                      <th>Return Date</th>
                      <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>

                    </tbody>
                  </table>
                </div>
                <!-- /.box-body -->

              </div>

              <!-- Bad Deliveries -->
              <div class="tab-pane" id="badDeliveries">
                <div class="box-body table-responsive">
                  <table id="example2" class="table table-bordered table-hover">
                    <thead>
                    <tr>
                      <th>No</th>
                      <th>Delivery No</th>
                      <th>Business Name</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                      <% if (bad==null||bad==undefined){ %>

                      <% }else if(bad.length==0){ %>

                      <% }else{ %>
                      <%  bad.forEach(function(i){ %>
                          <tr>
                            <td><%=i.intBadOrdersNo%></td>
                            <td><%=i.rno%></td>
                            <td><%=i.strBusinessName%></td>
                            <td>
                              <% if(i.stat == 2 ){ %>
                                <span class="label label-warning">Waiting</span>

                              <% }if(i.stat == 1){ %>
                                <span class="label label-success">Received</span>

                              <% } %>
                            </td>
                            <td><button class="large ui button">View Details</button></td>
                          </tr>
                      <%  }) %>
                      <% } %>

                    </tbody>
                  </table>
                </div>
              </div>


            </div>
          </div>



	    </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

  <!-- /.content-wrapper -->


