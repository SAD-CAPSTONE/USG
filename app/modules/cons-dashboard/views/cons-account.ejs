                            <div id="content" class="clearfix rep">
                                <div id="userphoto"><img src="images/avatar.png" alt="default avatar"></div>
                                <h1>Business Name</h1>
                                <nav id="profiletabs">
                                <ul class="clearfix">
                                    <li><a href="#bio" class="sel">Bio</a></li>
                                    <li><a href="#activity">Brands</a></li>
                                </ul>
                                </nav>
                                
