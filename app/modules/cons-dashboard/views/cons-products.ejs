<%- include('../../../templates/consignor-dashboard.ejs') -%>

    <div id="consigner" class="container">
		<div class="row">
		  <div class="col">
			<div id="main-content">
				<div class="col-lg-12">
					<div class="card-title">
						<h4>Products </h4>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table class="table">
								<thead>
									<tr>
										<th>&nbsp</th>
										<th>&nbsp</th>
										<th>Name</th>
										<th>Price</th>
										<th>Stock</th>
										<th>Category</th>
										<th>Action</th>
										
									</tr>
								</thead>
								<tbody>
									<% if (re == null || re == undefined){ %>

										<% }else if (re.length == 0){ %>
	
										<% }else{ %>
											<%  re.forEach(function(i){ %>
												<tr>
													<td>&nbsp</td>
													<td>
														<div class="round-img">
															<a href=""><img src="/assets/images/products/<%=i.strProductPicture%>"></a>
														</div>
													</td>
													<td><%= i.strProductName%></td>
													<td><span><%= i.productPrice%></span></td>
													<td><span><%= i.intQuantity%></span></td>
													<td><span class="badge badge-default"><%= i.strCategory%></span></td>
													<td><a class="btn btn-custom-primary" data-toggle='modal' data-target='#EditInfo'> </i>&nbsp;View Sales</a>
														<div id="EditInfo" class="modal fade" tabindex='-1' role='dialog' aria-labelledby='EditInfoTitle' aria-hidden='true'>
															<div class="modal-dialog" role='document'>
															<div class="modal-content">
																<div class="modal-header">
																<h5 id="EditInfoTitle" class="modal-title"><b><%= i.strProductName%></b></h5>
																<button class="close" type='button' data-dismiss='modal' aria-label='Close'>
																	<span aria-hidden='true'>×</span>
																</button>
																</div>
																<div class="modal-body">
																<div class="row">
																	<div style="width: 490px;padding: 20px;"><span class="text-tab">Orders</span><span class="text-r">10</span>
																	<hr/><span class="text-tab">Products Sold</span><span class="text-r">10</span>
																	<hr/><span class="text-tab">Cancelled</span><span class="text-r">10</span>
																	</div>
																</div>
																<div class="modal-footer">
																<button class="btn btn-secondary" type='button', data-dismiss='modal'>Close</button>
																</div>
																</div>
															</div>
															</div>
														</div>
													</td>
												</tr>
											<%  }) %>
											<% } %>
								</tbody>
							</table>
						</div>
					</div>
					<div class="row">
					<div class="col"> </div>
					<div class="col">
					<ul class="pagination" style="margin-left: 40px;">
						<li class="page-item">
						<a class="page-link" href="#" aria-label="Previous"> <span aria-hidden="true">«</span> <span class="sr-only">Previous</span> </a>
						</li>
						<li class="page-item">
						<a class="page-link" href="#">1</a>
						</li>
						<li class="page-item">
						<a class="page-link" href="#">2</a>
						</li>
						<li class="page-item">
						<a class="page-link" href="#">3</a>
						</li>
						<li class="page-item">
						<a class="page-link" href="#">4</a>
						</li>
						<li class="page-item">
						<a class="page-link" href="#">5</a>
						</li>
						<li class="page-item">
						<a class="page-link" href="#">6</a>
						</li>
						<li class="page-item">
						<a class="page-link" href="#" aria-label="Next"> <span aria-hidden="true">»</span> <span class="sr-only">Next</span> </a>
						</li>
					</ul>
					</div>
					<div class="col"> </div>
					</div>
					</div>
				</div>
				</div>
		</div>
		</div>
    </div>

