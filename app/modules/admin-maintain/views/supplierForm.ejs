<script>
$(document).ready(function(){

    $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
      checkboxClass: 'icheckbox_flat-green',
      radioClass   : 'iradio_flat-green'
    })

    $('#response').hide();

    $('#sub').on('click',function(){

      var inv = 0;
      var cont = 0;
      if ($('#invoice').prop('checked')== true){
        inv = 1;
      }
      if ($('#contractavailable').prop('checked') == true){
        cont = 1;
      }

      $.ajax({
        url: '/maintenance/addSupplier',
        method: 'POST',
        datatype: "json",
        data: {
          userid: $('#sno').val(),
          fname: $('#FName').val(),
          mname: $('#MName').val(),
          lname: $('#LName').val(),
          bname: $('#BName').val(),
          address: $('#address').val(),
          email: $('#email').val(),
          brands: $('#brands').val(),
          phone: $('#phone').val(),
          mobile: $('#mobile').val(),
          tin: $('#tin').val(),
          invoice: inv,
          type: $('#type').val(),
          businesstype: $('#businesstype').val()

        },
        success: function(response,status,http){
            if (response == "yes"){

              swal("Success","Supplier Added", "success");
              $('#response').click();
            }else{
              swal("Error!","There's a problem inserting supplier record, try again.", "error");
            }

        }
      })


    });



})
</script>


