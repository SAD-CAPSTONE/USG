<script>
  $('#supplierForm').submit(function(e){
    e.preventDefault();

    swal({
      title: "Are you sure?",
      text: "Please review all the data you've entered",
      type: "warning",
      showCancelButton: true,
      confirmButtonClass: "btn-info",
      confirmButtonText: "Submit!",
      closeOnConfirm: false
    },
    function(){
      $.ajax({
        url: '/maintenance/addSupplier',
        method: 'post',
        data: $('#supplierForm').serialize(),
        success: function(response,status,http){
          if(response){
            swal({title:"Success!",text:"You've added a supplier",type:"success"}, function(){
              window.location.href = '/maintenance/supplier';
            });
          }
        }
      })
    });


  })
</script>


