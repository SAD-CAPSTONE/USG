						</div>

            <div class="form-group">

							<label for="phone" class="col-sm-2 control-label">Phone No</label>

							<div class="col-sm-2">
								<input type="text" class="input-sm form-control" id="phone" placeholder="">
							</div>

              <label for="mobile" class="col-sm-2 control-label">Mobile No</label>

							<div class="col-sm-2">
								<input type="text" class="input-sm form-control" id="mobile" placeholder="">
							</div>
						</div>

            <div class="form-group">

							<label for="tin" class="col-sm-2 control-label">Business TIN</label>

							<div class="col-sm-4">
								<input type="text" class="input-sm form-control" id="tin" placeholder="">
							</div>
						</div>

            <div class="form-group">

              <label for="invoice" class="col-sm-2 control-label">Invoice Available?</label>

              <div class="col-sm-4">
                <label>
                  <input type="radio" id="invoice" value="yes" name="r3" class="flat-red" checked>
                  Yes
                </label>

                <label>
                  <input type="radio" name="r3" class="flat-red">
                  No
                </label>
              </div>
            </div>

            <div class="form-group">

							<label for="" class="col-sm-2 control-label">Supplier Type</label>

							<div class="col-sm-4">
                <select id="type" class="input-sm form-control">
                  <option value="1">Consignor</option>
                  <option value="2">Outright</option>
                </select>

							</div>
						</div>

            <div class="form-group">

							<label for="" class="col-sm-2 control-label">Business Type</label>

							<div class="col-sm-4">
                <select id="businesstype" class="input-sm form-control">
                  <% if (businesstype == null || businesstype == undefined){ %>

                  <% }else if (businesstype.length == 0){ %>

                  <% }else{ %>
                  <%  businesstype.forEach(function(i){ %>
                      <option value="<%=i.intBusinessTypeNo%>"><%= i.strBusinessType%></option>
                  <%  }) %>
                  <% } %>


                </select>

							</div>
						</div>





					</form>


				</div>




        <div class="box-footer">
                  <a href="suppliers.html"><button type="button" class="btn btn-default">Back</button></a>
