<%- include('../../../templates/admin-footer.ejs') -%>

<!-- page script (new added) -->
<script>
  $(function () {
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': true,
      'searching'   : true,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : true,
	  'select'		: true,
	  'scroll'		: true
    })
  })
</script>


<script>
$('#title').html("USG | Suppliers - Contracts");
$(".treeview a:contains('Maintenance')").parent().addClass("active");
$(".navi a:contains('Suppliers')").parent().addClass("active");
</script>

<script>
  $('.terminate').on('click',function(){
    swal({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      type: 'warning',
      showCancelButton: true,
      confirmButtonColor: 'red',
      cancelButtonColor: '#3085d6',
      confirmButtonText: 'Yes'
    }).then((result) => {
      if (result.value) {
        swal(
          'Terminated!',
          'The consignor has been terminated.',
          'success'
        )
      }
    })
  });
</script>


