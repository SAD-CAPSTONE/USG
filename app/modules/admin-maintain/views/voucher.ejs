<script>
  $(document).ready(function(){
    $('#save').on('click',function(){
      $.ajax({
        url: '/maintenance/addVoucher',
        method: 'POST',
        datatype: "json",
        data: {
          vno: $('#vno').val(),
          vcode: $('#vcode').val(),
          vdesc: $('#vdesc').val(),
          vvalid: $('#vvalid').val()
        },
        success: function(response,status,http){
          if (response){
            if(response == "yes"){
              swal("Success!", "New voucher added", "success");
              window.location.reload();
            }
          }
        }
      })
    })
  });
</script>

