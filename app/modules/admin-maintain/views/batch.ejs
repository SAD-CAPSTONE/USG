 $(function () {
   $('#example2').DataTable({
     'paging'      : true,
     'lengthChange': true,
     'searching'   : true,
     'ordering'    : true,
     'info'        : true,
     'autoWidth'   : true,
   'select'		: true,
   'scroll'		: true
   })
 })
</script>

