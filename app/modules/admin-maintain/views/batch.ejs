<%- include('../../../templates/admin-navbar.ejs') -%>

<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
   <!-- Content Header (Page header) -->
   <section class="content-header">
     <h1>

       <small>Note: Products are grouped by batch for efficient stock pull-out</small>
     </h1>
     <ol class="breadcrumb">
       <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
       <li><a href="#">Maintenance</a></li>
       <li class="active">Product Batch</li>
     </ol>
   </section>

   <!-- Main content -->
   <section class="content">
     <div class="row">
       <div class="col-xs-12">
         <div class="box">
           <div class="box-header">
             <h4 align="center">Product Batch</h3>
           </div>
     <!-- buttons -->
       &nbsp; &nbsp;<button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#addType"><i class="fa fa-plus"></i> Pull Out Products</button>
           <!-- /.box-header -->
           <div class="box-body table-responsive">
             <table id="example2" class="table table-bordered table-hover">
               <thead>
               <tr>
                 <th>Batch no</th>
                 <th>Product Name</th>
                 <th>Date Received</th>
                 <th>Expiration Date</th>
                 <th>Quantity</th>
               </tr>
               </thead>
               <tbody>
                <% if (re == null||re==undefined){ %>

                <% }else if(re.length == 0){ %>

                <% }else{ %>
                  <% re.forEach(function(i){ %>
                    <tr>
                      <td><%=i.intBatchNo%></td>
                      <td><%=i.strProductName%></td>
                      <td><%= moment(i.created_at).format('MM/DD/YYYY')%></td>
                      <td><%= moment(i.expirationDate).format('MM/DD/YYYY')%></td>
                      <td><%= i.quantity %></td>
                    </tr>
                  <% }) %>
                <% } %>

               </tbody>

             </table>
           </div>
           <!-- /.box-body -->
         </div>
         <!-- /.box -->

     </div>
       <!-- /.col -->
     </div>
     <!-- /.row -->
   </section>
   <!-- /.content -->
</div>

 <!-- /.content-wrapper -->

 <!-- Modals -->

 <%- include('../../../templates/admin-aside.ejs') -%>

<!-- ./wrapper -->

