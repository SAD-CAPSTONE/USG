<script>
  $('#add_form').submit(function(e){
    e.preventDefault();

    $.ajax({
      url: '/maintenance/addBrand',
      method: 'post',
      data: $('#add_form').serialize(),
      success: function(response,status,http){
        if(response){
          swal({title: "Success",text:"You have edited a brand",type:"success"}).then(()=>{
            location.reload();

          });
        }
      }
    })
  })
</script>

