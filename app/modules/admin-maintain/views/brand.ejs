<%- include('../../../templates/admin-navbar.ejs') -%>

 <!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>

        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Maintenance</a></li>
        <li class="active">Product Brand</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h4 align="center">Brand</h4>
            </div>
			<!-- buttons -->
				&nbsp; &nbsp;<button type="button" class="large ui green button" data-toggle="modal" data-target="#addBrand"><i class="fa fa-plus"></i> Add Brand</button>
            <!-- /.box-header -->
            <div class="box-body table-responsive">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>

                  <th>Brand</th>
				          <th style="width: 30%">Status</th>
                  <th style="width: 20%">Actions</th>
                </tr>
                </thead>
                <tbody>
                  <% if (re == null || re == undefined){ %>

                  <% }else if (re.length == 0){ %>

                  <% }else{ %>
                  <%  re.forEach(function(i){ %>
                      <tr>

                        <td><%=i.strBrand%></td>
                        <td>
                          <% if (i.intStatus == 1){ %>
                            <button data-no="<%=i.intBrandNo%>" class="ui toggle button active inactivate_brand">Active</button>

                          <% }else{ %>
                            <button data-no="<%=i.intBrandNo%>" class="ui toggle button inactive activate_brand">Inactive</button>

                          <% } %>
                        </td>
                        <td>
                          <center>
                          <button type="button" class="large ui teal button" data-toggle="modal" data-target="#editBrand" data-no="<%=i.intBrandNo%>"><i class="glyphicon glyphicon-edit"></i></button>
                          <button class="large ui red button"><i class="glyphicon glyphicon-trash"></i></button>
                        </center>
                        </td>
                      </tr>
                    <% }) %>
                  <% } %>




                </tbody>

              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

	    </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

  <!-- /.content-wrapper -->

  <!-- Modals -->

	<div class="modal fade" id="addBrand">
	  <div class="modal-dialog">
		<div class="modal-content">
		  <div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			  <span aria-hidden="true">&times;</span></button>
			<h4 class="modal-title"></h4>
		  </div>
		  <div class="modal-body">
			<!-- Horizontal Form -->

					<!-- form start -->
          <form role="form" id="brand_form">
              <div class="box-body">
                <div id="formgroup" class="form-group">

                  <label for="bType">Brand Name:</label>
                  <input type="text" id="brand" class="form-control" name="brand" placeholder="">
                  <span id="errorhelpBlock" class="help-block">You already have the same record!</span>
                </div>

              </div>


		  </div>
		  <div class="modal-footer">
			<button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
			<button type="submit" id="save" class="btn btn-primary">Save</button>
		  </div>
      </form>
		</div>
		<!-- /.modal-content -->
	</div>
  <!-- /.modal-dialog -->
</div>



<%- include('../../../templates/admin-aside.ejs') -%>

<!-- ./wrapper -->

<!-- REQUIRED JS SCRIPTS -->

<%- include('../../../templates/admin-footer.ejs') -%>

<!-- page script (new added) -->
<script>
  $(function () {
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': true,
      'searching'   : true,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : true,
	  'select'		: true,
	  'scroll'		: true
    })
  })
</script>

<script>
  $('#errorhelpBlock').hide();
  $('#save').attr('disabled',true);
  $('#brand').on('keyup',function(){

    $.post('/validate/brand',{data: $(this).val()},function(data,status){
      if(data == "yes"){
        $('#errorhelpBlock').show();
        $('#formgroup').attr('class', 'form-group has-error');
        $('#save').attr('disabled',true);

      }else{
        $('#errorhelpBlock').hide();
        $('#formgroup').attr('class', 'form-group has-success');
        $('#save').attr('disabled',false);
      }
    });
  })
</script>

<script>
  $('#brand_form').submit(function(e){
    e.preventDefault();

    $.ajax({
      url: '/maintenance/addBrand',
      method: 'post',
      data: $('#brand_form').serialize(),
      success: function(response,status,http){
        if(response){
          swal("Success","You have added a brand","success");
          location.reload();
        }
      }
    })
  })
</script>

<script>
$('.inactivate_brand').on('click',function(){
  $(this).removeClass("ui toggle button active inactivate_type").addClass("ui toggle button  activate_type").html("Inactive");

  $.ajax({
    url: '/maintenance/inactivateBrand',
    method: 'post',
    datatype: 'json',
    data: {no: $(this).data('no')},
    success: function(response,status,http){
      if (response){
        swal("Success!", "You have activated Brand no"+$(this).data('no'), "success");
      }
    }
  })
})

$('.activate_brand').on('click',function(){
  $(this).removeClass("ui toggle button activate_type").addClass("ui toggle button active inactivate_type").html("Active");

  $.ajax({
    url: '/maintenance/activateBrand',
    method: 'post',
    datatype: 'json',
    data: {no: $(this).data('no')},
    success: function(response,status,http){
      if (response){
        swal("Success!", "You have activated Brand no"+$(this).data('no'), "success");
      }
    }
  })
})
</script>

<script>
$('#title').html("USG | Brand");
$(".treeview a:contains('Maintenance')").parent().addClass("active");
$(".navi a:contains('Product Brand')").parent().addClass("active");
</script>


