<%- include('../../../templates/admin-navbar.ejs') -%>

<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
   <!-- Content Header (Page header) -->
   <section class="content-header">
     <h1>

       <small></small>
     </h1>
     <ol class="breadcrumb">
       <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
       <li><a href="#">Maintenance</a></li>
       <li class="active">Product Certifications</li>
     </ol>
   </section>

   <!-- Main content -->
   <section class="content">
   <div class="row">
     <div class="col-md-12">
       <div class="box box-info">
         <div class="box-header with-border">
           <h3 class="box-title">Product Certifications</h3>
         </div>
         <!-- /.box-header -->
       </br>
         &nbsp;&nbsp;<button data-toggle="modal" data-target="#certificationmodal" class="large ui green button">Add Certification</button>
         <div class="box-body table-responsive">
           <table id="category" class="table table-bordered table-hover">
           <thead>
             <tr>

               <th>Certification</th>
               <th>Status</th>
               <th style="width: 20%">Actions</th>
             </tr>
         </thead>
         <tbody>
           <% if (certification == null || certification == undefined){ %>

           <% }else if(certification.length == 0){ %>

           <% }else{ %>
           <%  certification.forEach(function(i){ %>
               <tr>

                 <td><%=i.strCertification%></td>
                 <td>
                   <% if (i.intStatus == 1) { %>
                     <button data-no="<%=i.intCertificationNo%>" class="ui toggle button active inactivate_certification">Active</button>

                   <% }else{ %>
                     <button data-no="<%=i.intCertificationNo%>" class="ui toggle button inactive activate_certification">Inactive</button>

                   <% } %>
                 </td>
                 <td>
                   <center>
                   <button data-toggle="modal" data-target="#editCertification" data-no="<%=i.intCertificationNo%>" data-name="<%=i.strCertification%>"  class="editCertificate large ui teal button"><i class="glyphicon glyphicon-edit"></i></button>
                   <button class="large ui red button"><i class="glyphicon glyphicon-trash"></i></button>
                 </center>
                 </td>
               </tr>
             <% }) %>
           <% } %>
         </tbody>


           </table>
         </div>
         <!-- /.box-body -->

       </div>
       <!-- /.box -->
     </div>



   </div> <!-- row end -->

 </section>

</div>

 <!-- /.content-wrapper -->

 <!-- Modals -->

 <div class="modal fade" id="certificationmodal">
   <div class="modal-dialog">
   <div class="modal-content">
     <div class="modal-header">
     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
       <span aria-hidden="true">&times;</span></button>
     <h4 class="modal-title"></h4>
     </div>
     <div class="modal-body">
     <!-- Horizontal Form -->

       <!-- form start -->
       <form role="form" id="certificationForm">
         <div class="box-body">
           <div class="form-group">
             <label for="category">Product Certification:</label>
             <input type="text" required class="form-control" name="certification" id="category" placeholder="ex. Gluten-free">
           </div>

         </div>


     </div>
       <div class="modal-footer">
       <button type="button" class="large ui button" data-dismiss="modal">Close</button>
       <button type="submit" class="large ui teal button">Save</button>
       </div>
     </form>
   </div>
   <!-- /.modal-content -->
 </div>
 <!-- /.modal-dialog -->
</div>


 <div class="modal fade" id="editCertification">
   <div class="modal-dialog">
   <div class="modal-content">
     <div class="modal-header">
     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
       <span aria-hidden="true">&times;</span></button>
     <h4 class="modal-title"></h4>
     </div>
     <div class="modal-body">
     <!-- Horizontal Form -->

       <!-- form start -->
       <form role="form" id="form_edit">
         <div class="box-body">
           <div class="form-group">
             <label for="category">Product Certification:</label>
             <input type="hidden"  class="form-control" name="no_e" id="no_e" >

             <input type="text" required class="form-control" name="certification_e" id="certification_e" >
           </div>

         </div>


     </div>
       <div class="modal-footer">
       <button type="button" class="large ui button" data-dismiss="modal">Close</button>
       <button type="submit" id="save2" class="large ui teal button">Save</button>
       </div>
     </form>
   </div>
   <!-- /.modal-content -->
 </div>
 <!-- /.modal-dialog -->
</div>

<%- include('../../../templates/admin-aside.ejs') -%>


<!-- ./wrapper -->

