<script>
 $(function () {
   $('#category').DataTable({
     'paging'      : true,
     'lengthChange': true,
     'searching'   : true,
     'ordering'    : true,
     'info'        : true,
     'autoWidth'   : true,
   'select'		: true,
   'scroll'		: true
   })
 })
</script>

<script>
  $('.editCertificate').on('click',function(){
    $('#no_e').val($(this).data('no'));
    $('#certification_e').val($(this).data('name'));
  })

  $('#form_edit').submit(function(e){
    e.preventDefault();
    $.post('/maintenance/editCertification',$('#form_edit').serialize(),function(data,status){
      if(data){
        confirm_alert();
      }
    })
  })
</script>

<script>
 $(function () {
   $('#subCategory').DataTable({
     'paging'      : true,
     'lengthChange': true,
     'searching'   : true,
     'ordering'    : true,
     'info'        : true,
     'autoWidth'   : true,
   'select'		: true,
   'scroll'		: true
   })
 })
</script>

<script>
$('#title').html("USG | Product Certifications");
$(".treeview a:contains('Maintenance')").parent().addClass("active");
$(".navi a:contains('Product Certification')").parent().addClass("active");
</script>

<script>
  $('#certificationForm').submit(function(e){
    e.preventDefault();

    $.ajax({
      url: '/maintenance/addCertification',
      type: 'post',
      data: $('#certificationForm').serialize(),
      success: function(response,status,http){
        swal("Success!","You added a product certification", "success");
        location.reload();
      },
      error: function(response){
        swal("Error!","","error");
        location.reload();
      }
    });
  })
</script>

<script>
$('.inactivate_certification').on('click',function(){
  $(this).removeClass("ui toggle button active inactivate_certification").addClass("ui toggle button  activate_certification").html("Inactive");

  $.ajax({
    url: '/maintenance/inactivateCertification',
    method: 'post',
    datatype: 'json',
    data: {no: $(this).data('no')},
    success: function(response,status,http){
      if (response){
        swal("Success!", "You have activated Certification no"+$(this).data('no'), "success");
      }
    }
  })
})

$('.activate_certification').on('click',function(){
  $(this).removeClass("ui toggle button activate_certification").addClass("ui toggle button active inactivate_certification").html("Active");

  $.ajax({
    url: '/maintenance/activateCertification',
    method: 'post',
    datatype: 'json',
    data: {no: $(this).data('no')},
    success: function(response,status,http){
      if (response){
        swal("Success!", "You have activated Certification no"+$(this).data('no'), "success");
      }
    }
  })
})
</script>


