 <script>
 $(document).ready(function(){

  $('#save').on('click',function(){
    $.ajax({
      url: '/maintenance/addPromotion',
      method: 'POST',
      datatype: "json",
      data: {
        pno: $('#pno').val(),
        pcode: $('#pcode').val(),
        pname: $('#pname').val(),
        pdesc: $('#pdesc').val(),
        pdiscount: $('#pdiscount').val(),
        pdue: $('#pdue').val()

      },
      success: function(response,status,http){
        if (response){
          if (response == "yes"){
            swal("Success", "Product Promo Added!", "success");
            window.location.reload();
          }
        }
      }
    });
  });


 })
 </script>


