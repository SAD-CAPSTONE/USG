<script>
  $(document).ready(function(){
    $('#save').on('click',function(){
      $.ajax({
        url: '/maintenance/addBusinessType',
        method: 'POST',
        datatype: "json",
        data: {
          bno: $('#bno').val(),
          btype: $('#bType').val(),
        },
        success: function(response,status,http){
          if (response){
            if (response == "yes"){
              swal({title:"Success",text:"Business type added!", type:"success"}, function(){
                  window.location.reload();
              });

            }
          }
        }
      })
    });
  })
</script>

<script>
$('.inactivate_type').on('click',function(){
  $(this).removeClass("ui toggle button active inactivate_type").addClass("ui toggle button  activate_type").html("Inactive");

  $.ajax({
    url: '/maintenance/inactivateType',
    method: 'post',
    datatype: 'json',
    data: {no: $(this).data('no')},
    success: function(response,status,http){
      if (response){
        swal("Success!", "You have activated Business Type no"+$(this).data('no'), "success");
      }
    }
  })
})

$('.activate_type').on('click',function(){
  $(this).removeClass("ui toggle button activate_type").addClass("ui toggle button active inactivate_type").html("Active");

  $.ajax({
    url: '/maintenance/activateType',
    method: 'post',
    datatype: 'json',
    data: {no: $(this).data('no')},
    success: function(response,status,http){
      if (response){
        swal("Success!", "You have activated Business Type no"+$(this).data('no'), "success");
      }
    }
  })
})
</script>

<script>
  $('#errorhelpBlock').hide();
  $('#save').attr('disabled',true);
  $('#bType').on('keyup',function(){

    $.post('/validate/businessType',{data: $(this).val()},function(data,status){
      if(data == "yes"){
        $('#errorhelpBlock').show();
        $('#formgroup').attr('class', 'form-group has-error');
        $('#save').attr('disabled',true);

      }else{
        $('#errorhelpBlock').hide();
        $('#formgroup').attr('class', 'form-group has-success');
        $('#save').attr('disabled',false);
      }
    });
  })
</script>

