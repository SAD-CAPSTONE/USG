<script>
  $('.editModal').on('click',function(){
    $('#no_edit').val($(this).data('no'));
    $('#type_edit').val($(this).data('name'));
    $('#edit_group').attr('class','form-group');
    $('#edit_error').hide();
    $('#edit_save').attr('disabled',true);
  })
</script>

<script>
  $(function () {
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': true,
      'searching'   : true,
