</script>

<script>
  function del(value){
    swal({
      title: 'Are you sure?',
      text: "You cannot revert this once you proceed",
      type: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!',
      reverseButtons: true
    }).then((result) => {
      if (result.value) {
        $.post('/maintenance2/deleteBusinessType',{number: value}, function(data,status){
          if(data){
            swal(
              'Success!',
              'You have deleted a business type',
              'success'
            ).then(()=>{
              location.reload();
            })
          }
        })

      }
    })
  }
</script>

<script>
  $(document).ready(function(){
    $('#add_form').submit(function(e){
      e.preventDefault();
      $.ajax({
        url: '/maintenance/addBusinessType',
        method: 'POST',
        datatype: "json",
        data: $('#add_form').serialize(),
        success: function(response,status,http){
          if (response){
            if (response == "yes"){
              swal({title:"Success",text:"Business type added!", type:"success"}).then(()=>{
                location.reload();
              });

            }
          }
        }
      })
    });
  })
</script>

