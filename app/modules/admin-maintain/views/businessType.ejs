<script>
  $('#add_error').hide();
  $('add_save').attr('disabled',true);
  $('#bType').on('keyup',function(){

    $.post('/maintenance2/businessType',{data: $(this).val()},function(data,status){
      if(data == "yes"){
        $('#add_error').show();
