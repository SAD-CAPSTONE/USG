<%- include('../../../templates/admin-navbar.ejs') -%>

 <!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>

        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Maintenance</a></li>
        <li class="active">Suppliers</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-8">
          <div class="box box-primary">
            <div class="box-body box-profile">


              <img class="profile-user-img img-responsive img-circle" src="/assets/images/static/profile.png" alt="User profile picture">

              <h3 class="profile-username text-center"><%=re[0].strFname%> <%=re[0].strMname%> <%=re[0].strLname%></h3>

              <p class="text-muted text-center">Outright</p>

              <center>
              <ul class="list-group list-group-unbordered">
                <li class="list-group-item">
                  <b>Brands:</b> &emsp;  <%= re[0].strBrands%>
                </li>
                <li class="list-group-item">
                  <b>Location:</b>&emsp; <%= re[0].strBusinessAddress %>
                </li>
                <li class="list-group-item">
                  <b>Email:</b>&emsp; <%= re[0].strBusinessEmail %>
                </li>
                <li class="list-group-item">
                  <b>Phone:</b>&emsp; <%= re[0].strSupplierPhone %>
                </li>
                <li class="list-group-item">
                  <b>Mobile:</b> &emsp;<%= re[0].strSupplierMobile %>
                </li>
              </ul>
            </center>

            <div class="row">
                <a id="details" class="large ui teal button btn-block"><b>Show More Details <i class="fa fa-chevron-down"></i></b></a>
            </div>

            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <div class="col-sm-2">
        </div>
      </div>

      <div id="row_details" class="row supplierShow">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-8">
          <div class="box box-primary">
            <div class="box-body ">
              <div class="box-header with-border">
                <h3 class="box-title">Outright Details</h3>
              </div>
              <br>
              <form class="form-group">
              <div class="row">
                <div class="col-sm-4">
                  <label>Business Name:</label>
                </div>
                <div class="col-sm-4">
                  Janelle's Bakery
                </div>
              </div>

              <div class="row">
                <div class="col-sm-4">
                  <label>Available Days:</label>
                </div>
                <div class="col-sm-4">
                  Monday, Tuesday
                </div>
              </div>
              <div class="row">
                <div class="col-sm-4">
                  <label>DTI Registered:</label>
                </div>
                <div class="col-sm-4">
                  Yes
                </div>
              </div>
              <div class="row">
                <div class="col-sm-4">
                  <label>FDA Registered:</label>
                </div>
                <div class="col-sm-4">
                  Yes
                </div>
              </div>

              <div class="row">
                <div class="col-sm-4">
                  <label>FDA ID:</label>
                </div>
                <div class="col-sm-4">
                  123456
                </div>
              </div>

            </form>
            <a href="#" class="large ui green button btn-block"><b>Download Excel <i class="fa fa-download"></i></b></a>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <div class="col-sm-2">
        </div>
      </div>
    </section>
    <!-- /.content -->
</div>

  <!-- /.content-wrapper -->

  <!-- Modals -->

  <%- include('../../../templates/admin-aside.ejs') -%>

<!-- ./wrapper -->

<!-- REQUIRED JS SCRIPTS -->

<%- include('../../../templates/admin-footer.ejs') -%>

<!-- page script (new added) -->
<script>
  $(function () {
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': true,
      'searching'   : true,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : true,
	  'select'		: true,
	  'scroll'		: true
    })
  })
</script>


<script>
$('#title').html("USG | Brand");
$(".treeview a:contains('Maintenance')").parent().addClass("active");
$(".navi a:contains('Supplier')").parent().addClass("active");
</script>


<script>
$('.supplierShow').animateCss('fadeInDown');
$('#row_details').hide();


$('#details').on('click',function(){
  $('#row_details').show();
 })


</script>


