<script>
$(document).ready(function(){

    $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
      checkboxClass: 'icheckbox_flat-green',
      radioClass   : 'iradio_flat-green'
    })
    $('#response').hide();
})
</script>

<script>
$('#type').val('<%=details[0].intSupplierType%>')
  $('#businesstype').val('<%=details[0].intBusinessTypeNo%>')
</script>

<script>
  $('#supplierForm').submit(function(e){
    e.preventDefault();

    swal({
      title: "Are you sure?",
      text: "Please review all the data you've entered",
      type: "warning",
      confirmButtonText: "Submit!",
      showCancelButton: true,
      reverseButtons: true
    }).then((result)=>{
      if(result.value){
        $.ajax({
          url: '/maintenance/supplierEdit',
          method: 'post',
          data: $('#supplierForm').serialize(),
          success: function(response,status,http){
            if(response){
              swal({title:"Success!",text:"You've edited a supplier",type:"success"}).then(()=>{
                  window.location.href = '/maintenance/supplier';
              })

            }
          }
        })
      }
    })



  })
</script>


<script>
$('#addContract_btn').hide();
$('#contract_form').hide();
$('#type').on('change',function(){
  if($(this).val() == 1){$('#addContract_btn').show(); }else {$('#addContract_btn').hide(); $('#contract_form').hide();}
});

$('#addContract_btn').on('click',function(){
  $('#contract_form').show();
})
</script>


<script>
$('#title').html("USG | Suppliers");
$(".treeview a:contains('Maintenance')").parent().addClass("active");
$(".navi a:contains('Suppliers')").parent().addClass("active");
</script>


