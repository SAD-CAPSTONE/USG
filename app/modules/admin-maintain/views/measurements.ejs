  $(function () {
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': true,
      'searching'   : true,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : true,
	  'select'		: true,
	  'scroll'		: true
    })
  })
</script>

<script>
$('#title').html("USG | Measurements");
$(".treeview a:contains('Maintenance')").parent().addClass("active");
$(".navi a:contains('Measurements')").parent().addClass("active");
</script>

<script>
  $('.edit_modal').on('click',function(){
    $('#no_e').val($(this).val('num'));
    $('#measure_e').val($(this).val('name'));
  })
</script>

<script>
  $('#form1_edit').submit(function(e){
    e.preventDefault();
    $.post('/maintenance/editMeasurement',$('#form1_edit').serialize(),function(data,success){
      if(data == yes){
        swal({title:"Success!",text:"You successfully edit a measurement",type"success"},function(){
          location.reload();
        })
      }else{
        swal({title:"Error!",text:"",type"error"})

      }
    })
  })
</script>

<script>
$('.inactivate_uom').on('click',function(){
  $(this).removeClass("ui toggle button active inactivate_uom").addClass("ui toggle button  activate_uom").html("Inactive");

  $.ajax({
    url: '/maintenance/inactivateUom',
    method: 'post',
    datatype: 'json',
    data: {no: $(this).data('no')},
    success: function(response,status,http){
      if (response){
        swal("Success!", "You have activated Measurement no"+$(this).data('no'), "success");
      }
    }
  })
})

$('.activate_uom').on('click',function(){
  $(this).removeClass("ui toggle button activate_uom").addClass("ui toggle button active inactivate_uom").html("Active");

  $.ajax({
    url: '/maintenance/activateUom',
    method: 'post',
    datatype: 'json',
    data: {no: $(this).data('no')},
    success: function(response,status,http){
      if (response){
        swal("Success!", "You have activated Measurement no"+$(this).data('no'), "success");
      }
    }
  })
})
</script>

<script>
  $('#errorhelpBlock').hide();
  $('#save').attr('disabled',true);
  $('#measure').on('keyup',function(){

    $.post('/validate/measurement',{data: $(this).val()},function(data,status){
      if(data == "yes"){
        $('#errorhelpBlock').show();
        $('#formgroup').attr('class', 'form-group has-error');
        $('#save').attr('disabled',true);

      }else{
        $('#errorhelpBlock').hide();
        $('#formgroup').attr('class', 'form-group has-success');
        $('#save').attr('disabled',false);
      }
    });
  })
</script>

<script>
  function del(value){
    swal({
      title: 'Are you sure?',
      text: "You cannot revert this once you proceed",
      type: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!',
      reverseButtons: true
    }).then((result) => {
      if (result.value) {
        $.post('/maintenance2/deleteMeasurements',{number: value}, function(data,status){
          if(data){
            swal(
              'Success!',
              'You have deleted a product measurement',
              'success'
            ).then(()=>{
              location.reload();
            })
          }
        })

      }
    })
  }
</script>


