<%- include('../../../templates/sidebar-product.ejs') -%>

<!-- main content title -->
<div class="row px-3">
  <div class="col">
    <h4 style="padding-top: 7px;" class="lead pl-1 pb-2"><b>All Products</b></h4>
  </div>
  <div style="text-align: right" class="col-4 mb-3">
    <select id="sort" name="sort" class="form-control">
    <option value="">Sort by Popularity</option>
    <option value="">Sort by Price</option>
    <option value="">Sort by Newest</option>
  </select>
  </div>
</div>
<!-- main content -->
<div>
  <div class="container">
    <div class="row">
      <% for(i=1; i<7; i++){ %>
        <div class="col-sm-6 col-lg-4 mb-4">
          <div class="card"><a href="/item"><img src="/assets/images/static/img<%= i%>.jpg" alt="Card image cap" class="card-img-top product-img"/></a>
            <ul class="list-group list-group-flush">
              <li class="list-group-item bold product-card-name">Product Name
                <p><small>Product Stock Left</small></p>
              </li>
            </ul>
            <div class="card-body bottom-card-button">
              <h4 class="card-price">&#x20B1; Product Price</h4>
              <a href="#" class="btn btn-custom-primary btn-block">
                <i class="fa fa-fw fa-cart-plus"></i>&nbsp;Add to Cart
              </a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
  <br>
</div>
<!-- pagination -->
<div class="row">
  <div class="col"> </div>
  <div class="col pt-3">
    <ul class="pagination">
      <li class="page-item"><a href="#" aria-label="Previous" class="page-link"><span aria-hidden="true">&laquo;</span> <span class="sr-only">Previous</span></a></li>
      <li class="page-item"><a href="#" class="page-link">1</a></li>
      <li class="page-item"><a href="#" class="page-link">2</a></li>
      <li class="page-item"><a href="#" class="page-link">3</a></li>
      <li class="page-item"><a href="#" class="page-link">4</a></li>
      <li class="page-item"><a href="#" class="page-link">5</a></li>
      <li class="page-item"><a href="#" class="page-link">6</a></li>
      <li class="page-item"><a href="#" aria-label="Next" class="page-link"><span aria-hidden="true">&raquo;</span> <span class="sr-only">Next</span></a></li>
    </ul>
  </div>
  <div class="col"> </div>
</div>

