<nav id="cart-sidebar">
  <div id="cart-container">
    <div id="dismiss">
      <i class="zmdi zmdi-arrow-right" style="font-size: 20px; font-weight: 500"></i>
    </div>
    <div class="cart-sidebar-header">
      <h2>Your Cart</h2>
    </div>
    <button id="getCart" type="button" hidden></button>
    <ul class="list-unstyled components">
      <div id="cart-pad">
        <!-- cart cards -->
      </div>
    </ul>

    <ul class="list-unstyled checkout">
      <p>Subtotal</p>
      <button id="subtotal-btn" type="button" hidden></button>
      <p class="price-symbol"></p>
      <li><a href="/summary/checkout" class="article">Check Out</a></li>
    </ul>
  </div>
</nav>

<nav class="navbar navbar-expand-lg bg-custom-primary navbar-dark pt-0">
