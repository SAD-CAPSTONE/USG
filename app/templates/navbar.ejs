    <button type="button" data-toggle="collapse" data-target="#navbar2SupportedContent" aria-controls="navbar2SupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler navbar-toggler-right"><span class="navbar-toggler-icon"></span></button>
    <div id="navbar2SupportedContent" class="collapse navbar-collapse text-center justify-content-end pt-1">
      <ul class="navbar-nav">
        <li class="nav-item mr-2 searchbar">
          <form class="form-inline">
            <div class="input-group search" style="padding-top: 3px;">
              <input type="text" placeholder="Search" class="form-control form-control-sm search" />
              <div class="input-group-append">
                <button type="button" style="height: 30.1; padding-top: 3px" class="btn btn-custom-info"><i class="fa fa-fw fa-search"></i></button>
              </div>
            </div>
          </form>
        </li>
        <li class="nav-item mr-2"><a href="/home" class="nav-link"><i class="fa d-inline fa-lg fa-home"></i>  Home</a></li>
        <li class="nav-item drop-menu mr-2"><a href="/store" class="nav-link"><i class="fa d-inline fa-lg fa-leaf"></i>  Products</a></li>
        <li class="nav-item mr-1"><a data-toggle="modal" data-target="#CartModal" class="nav-link"><i class="fa d-inline fa-lg fa-shopping-cart"></i>  Cart</a></li>
        <li class="nav-item dropdown"><a id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding-top: 12px;" class="nav-link dropdown-toggle"><i class="fa fa-fw fa-cog"></i></a>
          <div aria-labelledby="navbarDropdownMenuLink" class="dropdown-menu">
            <% if (thisUser){ %>
              <a href="/account/dashboard" class="dropdown-item"><i class="fa d-inline fa-lg fa-user pr-2"></i>&nbsp<%= thisUser.strFname %></a>
            <% }else{ %>
              <a href="/account/dashboard" class="dropdown-item"><i class="fa d-inline fa-lg fa-user pr-2"></i>&nbspAccount</a>
