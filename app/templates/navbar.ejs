                <button type="button" class="btn btn-custom-sub"><i class="fa fa-fw fa-search"></i></button>
              </div>
            </div>
          </form>
        </li>
        <li class="nav-item mr-2">
          <a href="/home" class="nav-link"><i class="fa d-inline fa-lg fa-home"></i>  Home</a></li>
