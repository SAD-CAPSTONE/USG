<div id="CartModal" tabindex="-1" role="dialog" aria-labelledby="CartModalTitle" aria-hidden="true" class="modal fade">
  <div role="document" class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="CartModalTitle" class="modal-title"><b>Cart</b></h5>
        <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true">×</span></button>
      </div>
      <div class="modal-body">
        <div data-simplebar="" class="tab tab-cart mb-2">
          <table class="table table-striped table-cart">
            <thead>
              <tr>
                <th scope="col">Order</th>
                <th scope="col" style="width: 90px">Price</th>
                <th scope="col" style="width: 120px">Quantity</th>
                <th scope="col" style="width: 90px">Total</th>
                <th scope="col" style="width: 90px;">Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">Shahani's Gatas Kalabaw</th>
                <td>₱ 230</td>
                <td class="centered">
                  <div class="input-group input-group-sm quantity"><span class="input-group-btn">
                    <button type="button" data-type="minus" data-field="quant[1]" class="btn btn-custom-primary btn-number btn-sm minus"><span>-</span></button>
                    </span>
                    <input type="text" name="quant[1]" value="1" min="1" max="100" readonly="" class="form-control input-number" /><span class="input-group-btn">
                    <button type="button" data-type="plus" data-field="quant[1]" class="btn btn-custom-primary btn-number btn-sm plus"><span>+</span></button>
                    </span>
                    <div class="row">
                      <div class="col">
                        <input type="text" name="quant[1]" value="1" min="1" max="100" style="width:50px" readonly="" class="form-control input-number" />
                      </div>
                    </div>
                  </div>
                </td>
                <td>₱ 230</td>
                <td><a class="button btn btn-sm btn-danger text-white"> Remove </a></td>
              </tr>
              <tr>
                <th scope="row">Keto Loaf & Rolls</th>
                <td>₱ 75</td>
                <td class="centered">
                  <div class="input-group input-group-sm quantity"><span class="input-group-btn">
                    <button type="button" data-type="minus" data-field="quant[2]" class="btn btn-custom-primary btn-number btn-sm minus"><span>-</span></button>
                    </span>
                    <input type="text" name="quant[2]" value="2" min="1" max="100" readonly="" class="form-control input-number" /><span class="input-group-btn">
                    <button type="button" data-type="plus" data-field="quant[2]" class="btn btn-custom-primary btn-number btn-sm plus"><span>+</span></button>
                    </span>
                    <div class="row">
                      <div class="col">
                        <input type="text" name="quant[2]" value="2" min="1" max="100" style="width:50px" readonly="" class="form-control input-number" />
                      </div>
                    </div>
                  </div>
                </td>
                <td>₱ 150</td>
                <td><a class="button btn btn-sm btn-danger text-white"> Remove </a></td>
              </tr>
              <tr>
                <th scope="row">Raw Cordyceps</th>
                <td>₱ 105</td>
                <td class="centered">
                  <div class="input-group input-group-sm quantity"><span class="input-group-btn">
                    <button type="button" data-type="minus" data-field="quant[3]" class="btn btn-custom-primary btn-number btn-sm minus"><span>-</span></button>
                    </span>
                    <input type="text" name="quant[3]" value="4" min="1" max="100" readonly="" class="form-control input-number" /><span class="input-group-btn">
                    <button type="button" data-type="plus" data-field="quant[3]" class="btn btn-custom-primary btn-number btn-sm plus"><span>+</span></button>
                    </span>
                    <div class="row">
                      <div class="col">
                        <input type="text" name="quant[3]" value="4" min="1" max="100" style="width:50px" readonly="" class="form-control input-number" />
                      </div>
                    </div>
                  </div>
                </td>
                <td>₱ 420</td>
                <td><a class="button btn btn-sm btn-danger text-white"> Remove </a></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="row">
          <div style="text-align: right" class="col px-4"><b>Sub-Total: </b>Php 800</div>
        </div>
      </div>
      <div class="modal-footer"><a href="/summary/checkout">
        <button class="btn btn-custom-primary">Proceed to Checkout</button></a>
        <button type="button" data-dismiss="modal" class="btn btn-secondary">Close</button>
      </div>
    </div>
  </div>
</div>
