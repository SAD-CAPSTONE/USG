<%- include('master.ejs') -%>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
<!-- CUSTOMER STYLES -->
<link rel="stylesheet" href="/assets/custom/cart.css" type="text/css" />
<link rel="stylesheet" href="/assets/custom/cart-cards.css" type="text/css" />
<link rel="stylesheet" href="/assets/custom/quantity.css" type="text/css" />
<link rel="stylesheet" href="/assets/custom/product-cards.css" type="text/css" />
<link rel="stylesheet" href="/assets/custom/modal-product-to-cart.css" type="text/css" />

<style>
  .mCSB_inside>.mCSB_container {
    margin-right: 10px !important;
  }
  .mCS-my-theme.mCSB_scrollTools .mCSB_dragger .mCSB_dragger_bar {
    background-color: var(--cart-button-color);
    ;
  }
  .mCS-my-theme.mCSB_scrollTools .mCSB_draggerRail {
    background-color: white;
    opacity: 0;
  }
  @media screen and (max-height: 241px) {
    .list-unstyled.components.mCustomScrollbar._mCS_2.mCS-autoHide {
      width: 383px !important;
    }
  }
</style>

<nav id="cart-sidebar">
  <div id="cart-container">
    <div id="dismiss">
      <i class="zmdi zmdi-arrow-right" style="font-size: 20px; font-weight: 500"></i>
    </div>
    <div class="cart-sidebar-header">
      <h2>Your Cart</h2>
    </div>

    <ul class="list-unstyled components">
      <div id="cart-pad">
        <% for(i=0; i<5 ;i++){ %>
          <div class="cart-product-container">
            <div class="product-card">
              <div class="product-pic"><img src="/assets/images/static/img<%= i+2%>.jpg"></div>
              <div class="product-desc">
                <p class="product-title">SuperScoops Premium Vegan Ice Cream Choco Milk</p>
                <small class="product-size text-muted">Size: 12 ml</small>
                <small class="product-oldprice text-muted">
                <span style="text-decoration: line-through;">₱&nbsp;285.99</span><span> (-10%)</span><br>
              </small>
                <div class="input-group quantity">
                  <div class="input-group-prepend addon">
                    <button class="btn btn-primary quantity-buttons" type="button">
                    <small class="quantity-text quantity-text-minus">-</small>
                  </button>
                  </div>
                  <input class="form-control quantity-input" type="text" readonly="" value="1">
                  <div class="input-group-append addon">
                    <button class="btn btn-primary quantity-buttons" type="button">
                    <small class="quantity-text quantity-text-plus">+</small>
                  </button>
                  </div>
                </div>
                <p class="product-price">₱ 255.99</p>
              </div>
            </div>
            <div class="product-remove"><i class="fa fa-remove product-remove-icon"></i></div>
          </div>
          <%}%>
      </div>
    </ul>

    <ul class="list-unstyled checkout">
      <p>Subtotal</p>
      <p>₱ 2,500.99</p>
      <li><a href="/summary/checkout" class="article">Check Out</a></li>
    </ul>
  </div>
</nav>

<nav class="navbar navbar-expand-lg bg-custom-primary navbar-dark pt-0">
  <div class="container"><a href="/home" class="navbar-brand"><img src="/assets/images/static/usg-white.png" alt="USG" height="35 " width="42"/><b> Ultra Super Green</b></a>
    <button type="button" data-toggle="collapse" data-target="#navbar2SupportedContent" aria-controls="navbar2SupportedContent" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler navbar-toggler-right"><span class="navbar-toggler-icon"></span></button>
    <div id="navbar2SupportedContent" class="collapse navbar-collapse text-center justify-content-end pt-1">
      <ul class="navbar-nav">
        <li class="nav-item mr-2 searchbar">
          <form class="form-inline">
            <div class="input-group search" style="padding-top: 3px;">
              <input type="text" placeholder="Search" class="form-control form-control-sm search" />
              <div class="input-group-append">
                <button type="button" class="btn btn-custom-info"><i class="fa fa-fw fa-search"></i></button>
              </div>
            </div>
          </form>
        </li>
        <li class="nav-item mr-2">
          <a href="/home" class="nav-link"><i class="fa d-inline fa-lg fa-home"></i>  Home</a></li>
        <li class="nav-item drop-menu mr-2">
          <a href="/store" class="nav-link"><i class="fa d-inline fa-lg fa-leaf"></i>  Products</a></li>
        <li class="nav-item mr-1">
          <a id="cartSidebarCollapse" class="nav-link"><i class="fa d-inline fa-lg fa-shopping-cart"></i>  Cart</a></li>
        <li class="nav-item dropdown">
          <a id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding-top: 12px;" class="nav-link dropdown-toggle"><i class="fa fa-fw fa-cog"></i></a>
          <div id="nav-setting-dropdown" aria-labelledby="navbarDropdownMenuLink" class="dropdown-menu">
            <% if (thisUser){ %>
              <a href="/account/dashboard" class="dropdown-item"><i class="fa d-inline fa-lg fa-user pr-2"></i>&nbsp<%= thisUser.strFname %></a>
              <% }else{ %>
                <a href="/account/dashboard" class="dropdown-item"><i class="fa d-inline fa-lg fa-user pr-2"></i>&nbspAccount</a>
                <% } %>
                  <a href="/home/faq" class="dropdown-item"><i class="fa d-inline fa-lg fa-question-circle pr-2"></i>FAQs</a>
                  <hr id="hzline" />
                  <a href="/login" class="dropdown-item"><i class="fa d-inline fa-lg fa-sign-out pr-2"></i>Logout</a>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="overlay"></div>
