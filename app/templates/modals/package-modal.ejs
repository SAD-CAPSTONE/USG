<div id="package-modal" class="modal fade" role="dialog" tabindex="-1"  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header block-none"></div>
      <div class="modal-body">
        <input id="package-id" type="text" hidden>
        <p class="package-title lh-p3em fw-400 mb-0">Package Name</p>
        <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true">Ã—</span></button>
        <hr>
        <p class="package-description mb-0 fs-08em lh-p3em text-muted">Package description</p>
        <div id="products-list"></div>

        <div class="price-pane-small block-none">
          <p class="mb-0 fs-1em fw-400 lh-p3em discount text-muted inline-block fl-l mb-1">Save <span>0</span>%</p>
          <p class="mb-0 fs-1em fw-400 lh-p3em price-symbol price-color inline-block fl-r mb-1">0.00</p>
        </div>
        <div style="clear: both"></div>

        <div class="fl-l">
          <p id="stock-display" class="mb-2 fs-08em fw-400"><span>0</span> Packages Left
            <i class="limit-info-package fa fa-info-circle text-muted" title="Maximum of 0 of the same package per order"></i>
          </p>
          <p class="mt-1 mb-0 fs-08em fw-400 lh-p3em text-muted expire-date">Package lasts until <span class="block">-</span></p>
        </div>
        <div class="fl-r align-right pl-2 item-options">
          <div class="input-group quantity mb-2">
            <div class="input-group-prepend addon">
              <button class="btn btn-primary quantity-buttons minus-btn" type="button">
                <small class="quantity-text quantity-text-minus">-</small>
              </button>
            </div>
            <input class="form-control quantity-input" type="text" value="1"/>
            <div class="input-group-append addon">
              <button class="btn btn-primary quantity-buttons plus-btn" type="button">
                <small class="quantity-text quantity-text-plus">+</small>
              </button>
            </div>
          </div>
          <button type="button" class="add-button btn btn-custom-primary btn-sm">Add to Cart</button>
        </div>
        <div class="fl-r align-right price-pane">
          <p class="mb-0 fs-1em fw-400 lh-p3em discount text-muted">Save <span>0</span>%</p>
          <p class="mb-0 fs-08em fw-400 lh-p3em price-symbol price-color">0.00</p>
        </div>

      </div>
      <div class="modal-footer block-none"></div>
    </div>
  </div>
</div>
